#include <stdio.h>  
#include <string.h>  
#include <ctype.h>  
  
void reverseWords(char *str) {  
    char temp[1000], *token, *words[100];  
    int count = 0;  
  
    // Remove fullstops and commas  
    int j = 0;  
    for (int i = 0; str[i]; i++) {  
        if (str[i] != ’,’ && str[i] != ’.’) {  
            temp[j++] = str[i];  
        }  
    }  
    temp[j] = ’\0’;  
  
    // Tokenize words  
    token = strtok(temp, " ");  
    while (token) {  
        words[count++] = token;  
        token = strtok(NULL, " ");  
    }  
  
    // Print words in reverse order  
    for (int i = count - 1; i >= 0; i--) {  
        printf("%s", words[i]);  
        if (i > 0) printf(" ");  
    }  
    printf("\n");  
}  
  
int main() {  
    char str[] = "Hello, world. This is, a test.";  
      
    printf("Original: %s\n", str);  
    printf("Reversed: ");  
    reverseWords(str);  
      
    return 0;  
}  
